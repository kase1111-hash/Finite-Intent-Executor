# =============================================================================
# Finite Intent Executor - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values for your environment.
# NEVER commit .env files with real credentials to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# BLOCKCHAIN CONFIGURATION
# -----------------------------------------------------------------------------

# Deployer wallet private key (without 0x prefix for some tools)
# WARNING: Use a dedicated deployment wallet, never your main wallet!
# [Audit fix: I-1] Leave empty â€” fill with your actual key in .env (never commit real keys)
# For production deployments, use a hardware wallet via MULTISIG_ADDRESS instead.
PRIVATE_KEY=

# RPC Endpoints (get from Alchemy, Infura, or other providers)
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key
GOERLI_RPC_URL=https://eth-goerli.g.alchemy.com/v2/your-api-key

# Base L2 (optional)
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key
BASESCAN_API_KEY=your_basescan_api_key

# -----------------------------------------------------------------------------
# BUILD & TEST CONFIGURATION
# -----------------------------------------------------------------------------

# Enable SMT Checker formal verification (slower builds)
ENABLE_SMT_CHECKER=false

# Gas reporting
REPORT_GAS=false
COINMARKETCAP_API_KEY=your_cmc_api_key
GAS_REPORT_FILE=gas-report.txt

# Contract size reporting
REPORT_SIZE=false

# CI mode (changes test reporter)
CI=false

# -----------------------------------------------------------------------------
# SECURITY INTEGRATION
# -----------------------------------------------------------------------------

# Boundary-SIEM Configuration
BOUNDARY_SIEM_URL=http://localhost:8080
BOUNDARY_SIEM_API_KEY=your_siem_api_key
BOUNDARY_SIEM_TRANSPORT=rest

# Boundary-Daemon Configuration
BOUNDARY_DAEMON_SOCKET=/var/run/boundary-daemon/daemon.sock
BOUNDARY_DAEMON_HOST=localhost
BOUNDARY_DAEMON_PORT=9999

# Security behavior
SECURITY_ENABLED=true
SECURITY_FAIL_CLOSED=true
SECURITY_MIDDLEWARE_ENABLED=true
LOG_ALL_REQUESTS=false
ENFORCE_PROTECTION=true

# -----------------------------------------------------------------------------
# FRONTEND CONFIGURATION
# -----------------------------------------------------------------------------

# React App environment variables (must be prefixed with REACT_APP_)
REACT_APP_NETWORK=sepolia
REACT_APP_CHAIN_ID=11155111

# Contract addresses (update after deployment)
REACT_APP_INTENT_MODULE_ADDRESS=0x0000000000000000000000000000000000000000
REACT_APP_TRIGGER_MECHANISM_ADDRESS=0x0000000000000000000000000000000000000000
REACT_APP_EXECUTION_AGENT_ADDRESS=0x0000000000000000000000000000000000000000
REACT_APP_LEXICON_HOLDER_ADDRESS=0x0000000000000000000000000000000000000000
REACT_APP_SUNSET_PROTOCOL_ADDRESS=0x0000000000000000000000000000000000000000
REACT_APP_IP_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000

# RPC for frontend (can be different from deployment RPC)
REACT_APP_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key

# Security integration for frontend
REACT_APP_BOUNDARY_SIEM_URL=http://localhost:8080
REACT_APP_BOUNDARY_SIEM_API_KEY=
REACT_APP_BOUNDARY_DAEMON_HOST=localhost
REACT_APP_BOUNDARY_DAEMON_PORT=9999
REACT_APP_SECURITY_ENABLED=true

# -----------------------------------------------------------------------------
# ORACLE CONFIGURATION (if using external oracles)
# -----------------------------------------------------------------------------

# Chainlink
CHAINLINK_OPERATOR_ADDRESS=
CHAINLINK_JOB_ID=
CHAINLINK_FEE=100000000000000000

# UMA
UMA_FINDER_ADDRESS=
UMA_BOND_AMOUNT=1000000000000000000

# -----------------------------------------------------------------------------
# DEPLOYMENT CONFIGURATION
# -----------------------------------------------------------------------------

# Default network for deployment scripts
DEFAULT_NETWORK=hardhat

# Deployment parameters
SUNSET_DURATION_YEARS=20
CONFIDENCE_THRESHOLD=95
DEADMAN_DEFAULT_INTERVAL=2592000

# Multi-sig configuration (for production)
MULTISIG_ADDRESS=
MULTISIG_THRESHOLD=2

# -----------------------------------------------------------------------------
# MONITORING & LOGGING
# -----------------------------------------------------------------------------

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Prometheus metrics
ENABLE_METRICS=false
METRICS_PORT=9090

# Sentry error tracking (optional)
SENTRY_DSN=

# -----------------------------------------------------------------------------
# LICENSE SUGGESTER (optional AI tool)
# -----------------------------------------------------------------------------

# Ollama configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2
